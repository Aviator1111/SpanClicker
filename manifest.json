
{
  "manifest_version": 2,

  "name": "Span Clickable Extension",
  "description": "This extension will search a page and make all the span elements clickable",
  "version": "1.0",

  "browser_action": {
   "default_icon": "./icons/clickicon16X16.png"
  },
  "permissions": [
   "activeTab"
   ],
   "content_scripts":[
       {
           "matches":["<all_urls>"],
           "js":["content.js"]
       }
   ],
   "background":{
       "scripts":["background.js"]
   }
}